<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="meghana"/>
        <constructor-arg index="1" value="female"/>
        <constructor-arg index="2" value="22" type="int"/>
    </bean>
    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="bellam"/>
        <constructor-arg index="1" value="male"/>
        <constructor-arg index="2" value="29" type="int"/>
    </bean>
    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="pallavi"/>
        <constructor-arg index="1" value="not defined"/>
        <constructor-arg index="2" value="20" type="int"/>
    </bean>
    <bean name="movieA, movieB" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" >
            <list>
                <ref bean="actor1"/>
                <ref bean="actor2"/>
                <ref bean="actor3"/>
            </list>
        </constructor-arg>
    </bean>
</beans>
